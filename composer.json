{
    "name": "prettyph/pretty-php",
    "description": "A modern, object-oriented wrapper for PHP's standard library with consistent API design",
    "type": "library",
    "keywords": ["php", "standard-library", "oop", "wrapper", "utility"],
    "license": "MIT",
    "authors": [
        {
            "name": "Pretty PHP Contributors",
            "email": "contributors@prettyph.dev"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "phpbench/phpbench": "^1.4",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.3",
        "rector/rector": "^2.1",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "PrettyPhp\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PrettyPhp\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "pest --compact",
        "coverage": "XDEBUG_MODE=coverage pest --compact --coverage",
        "analyze": "phpstan analyse --memory-limit=1G",
        "rector": "rector process --dry-run",
        "rector-fix": "rector process",
        "style": "phpcs --standard=PSR12 src/ tests/",
        "style-fix": "phpcbf --standard=PSR12 src/ tests/",
        "quality": [
            "@analyze",
            "@rector",
            "@style"
        ],
        "quality-fix": [
            "@rector-fix",
            "@style-fix"
        ],
        "bench": "phpbench run --report=aggregate"
    }
}
